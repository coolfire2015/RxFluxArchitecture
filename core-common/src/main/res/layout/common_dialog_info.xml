<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_400"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="@dimen/dp_4"
    app:contentPadding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:textColor="@color/common_text_primary"
            android:textSize="@dimen/sp_18"
            tools:text="@string/common_ok" />

        <TextView
            android:id="@+id/tv_info_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:textColor="@color/common_text_primary"
            android:textSize="@dimen/sp_16"
            tools:text="@string/common_hint_content" />

        <EditText
            android:id="@+id/et_info_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape_edit_border"
            android:hint="@string/common_hint_title"
            android:padding="@dimen/dp_10"
            android:textColor="@color/common_text_primary"
            android:textSize="@dimen/sp_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/et_info_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_edit_border"
                android:gravity="top|start"
                android:hint="@string/common_hint_content"
                android:padding="@dimen/dp_10"
                android:textColor="@color/common_text_primary"
                android:textSize="@dimen/sp_16" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_info_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_bg"
                android:gravity="center"
                android:text="@string/common_cancel"
                android:textColor="@color/common_text_primary"
                android:textSize="@dimen/sp_18" />

            <View style="@style/ViewDividerVerticalStyle" />

            <TextView
                android:id="@+id/tv_info_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_bg"
                android:gravity="center"
                android:text="@string/common_ok"
                android:textColor="@color/common_text_primary"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
